
<%= form_with(model: task, local: true) do |f| %>

  
<% if @task.errors.any? %>

    <div id="error_explanation">
              <h2>

      <ul>
        
<% @task.errors.full_messages.each do |msg| %>

          <li>
<%= msg %>
</li>
        
<% end %>

      </ul>
    </div>
  
<% end %>

    <%= f.label :content, 'タスク(content)' %>
    
      
    <%= f.text_field :content %>
    
    <%= f.label :status, 'タスク(status)' %>
    
      
    <%= f.text_field :status %>
    
    
      
    <%= f.submit '投稿' %>

<% end %>
